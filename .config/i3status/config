# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        output_format = "i3bar"
        colors = true
        interval = 1

        # gruvbox
        #color_good = "#6c782e"
        #color_degraded = "#c35e0a"
        #color_bad = "#c14a4a"

        # choihung
        color_good = "#889979"
        color_degraded = "#c4b86e"
        color_bad = "#782c17"
}

#order += "ipv6"
order += "battery 0"
order += "read_file hostname"
order += "cpu_temperature 0"
order += "cpu_temperature 1"
order += "wireless _first_"
order += "ethernet _first_"
# order += "disk /"
#order += "cpu_usage"
order += "volume master"
#order += "memory"
order += "tztime local"

read_file hostname {
        format = " %content "
        path = "/etc/hostname"
}

wireless _first_ {
        format_up = " W: %essid (%quality) "
        format_down = " W: down "
}

ethernet _first_ {
        format_up = " E: up "
        format_down = " E: down "
}

# gpd-pocket-3-polyos
cpu_temperature 0 {
        format = " CPU: %degrees °C "
#        max_threshold = 80
        path = "/sys/devices/platform/coretemp.0/hwmon/hwmon5/temp3_input"
}

# atx-polyos
cpu_temperature 1 {
        format = " CPU: %degrees °C "
#        max_threshold = 80
        path = "/sys/class/hwmon/hwmon4/temp1_input"
}

battery 0 {
        format = " %status %percentage ·"
        format_percentage = "%.00f%s"
        low_threshold = 25
        threshold_type = "percentage"
        # Prevents battery from going over 100%
        last_full_capacity = true
}

#disk "/" {
#        format = "%avail"
#}

cpu_usage {
        format = " CPU: %usage "
}

memory {
        format = " MEM: %used "
}

tztime local {
        format = " %Y-%m-%d %H:%M:%S "
}

volume master {
        format = " V: %volume "
        format_muted = " MUTED "
        device = "pulse"
}
